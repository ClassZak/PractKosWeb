<Window x:Class="ClientWPFGUI.UsernameDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ClientWPFGUI"
        mc:Ignorable="d"
        Initialized="Window_Initialized"
        Title="Смена пользователя" Height="270" Width="300" ResizeMode="NoResize" Background="Azure">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition Height="75"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>

        <TextBlock Text="Введите новое имя пользователя" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="18" Grid.Row="0"/>
        <TextBox x:Name="UsernameBox" Text="Пользователь" FontSize="24" TextWrapping="NoWrap" Grid.Row="1" Margin="10"/>
        <Button Content="Применить" FontSize="24" Grid.Row="2" Margin="10" Click="Button_Click"/>
    </Grid>
</Window>